{
  "manifest_version": 3,
  "name": "Personal Pizza Assistant",
  "version": "1.0",
  "description": "Your personal pizza ordering assistant",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.dominos.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo_16x16.png",
      "48": "images/logo_48x48.png",
      "128": "images/logo_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.dominos.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/logo_16x16.png",
    "48": "images/logo_48x48.png",
    "128": "images/logo_128x128.png"
  }
}